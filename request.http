GET http://localhost:5000/api/candidates
Content-Type: application/json

###

########################################
#  Add Candidate: Alice
POST http://localhost:5000/api/candidates
Content-Type: application/json

{
  "name": "Alice",
  "party": "Blue"
}

###

########################################
#  Add Candidate: Bob
POST http://localhost:5000/api/candidates
Content-Type: application/json

{
  "name": "Bob",
  "party": "Red"
}

###

########################################
#  Add Candidate: Charlie
POST http://localhost:5000/api/candidates
Content-Type: application/json

{
  "name": "Charlie",
  "party": "Green"
}

